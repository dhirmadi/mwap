# Application Configuration
# ------------------------------------
# Node environment: development, production, or test
NODE_ENV=development

# Port for the application to listen on
PORT=3000

# MongoDB Configuration
# ------------------------------------
# Replace the following placeholders in the connection string:
# <username>: Your MongoDB Atlas username
# <password>: Your MongoDB Atlas password
# <cluster>: Your cluster address (e.g., cluster0.xxxxx.mongodb.net)
# <database>: Your database name (e.g., mwap_db)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/<database>?retryWrites=true&w=majority

# Database name
MONGO_DB_NAME=mwap_db

# Database credentials (for reference only, actual connection uses MONGO_URI)
MONGO_USER=your_username
MONGO_PASSWORD=your_password

# MongoDB Encryption Configuration
# ------------------------------------
# Generate a 96-byte random key using: 
# node -e "console.log(require('crypto').randomBytes(96).toString('base64'))"
MONGO_CLIENT_ENCRYPTION_KEY=your_base64_encoded_encryption_key

# Name for the encryption key in the key vault
MONGO_ENCRYPTION_KEY_NAME=mwap_data_key

# Connection Pool Configuration
# ------------------------------------
# Maximum number of connections in the pool
MONGO_MAX_POOL_SIZE=10

# Minimum number of connections in the pool
MONGO_MIN_POOL_SIZE=2

# Timeouts (in milliseconds)
# ------------------------------------
# How long to wait for a connection to be established
MONGO_CONNECT_TIMEOUT_MS=30000

# How long to wait for a response from MongoDB
MONGO_SOCKET_TIMEOUT_MS=45000

# SSL Configuration
# ------------------------------------
# Whether to use SSL for MongoDB connection
MONGO_SSL_ENABLED=true

# Whether to validate SSL certificate
MONGO_SSL_VALIDATE=true

# Logging Configuration
# ------------------------------------
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Path for log files
LOG_FILE_PATH=logs/app.log

# API Configuration
# ------------------------------------
# Base URL for the API (used in documentation and links)
API_BASE_URL=http://localhost:3000

# Rate Limiting
# ------------------------------------
# Maximum number of requests per window
RATE_LIMIT_MAX=100

# Time window for rate limiting (in milliseconds)
RATE_LIMIT_WINDOW_MS=60000

# Security Configuration
# ------------------------------------
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT secret for authentication (if implemented)
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=your_jwt_secret_key

# JWT token expiration (in seconds)
JWT_EXPIRATION=86400