# Development Environment Configuration

# MongoDB Local Development
MONGO_USER=mwap_user
MONGO_PASSWORD=mwap_password
MONGO_DB_NAME=mwap_db
MONGO_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/${MONGO_DB_NAME}?authSource=admin

# Application Settings
NODE_ENV=development
LOG_LEVEL=debug

# Service Ports
API_GATEWAY_PORT=3100
STATUS_SERVICE_PORT=3101

# MongoDB Settings
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_CONNECT_TIMEOUT_MS=30000
MONGO_SOCKET_TIMEOUT_MS=45000

# Status Service Settings
STATUS_CHECK_INTERVAL=30000

# Note: For local development only. Production should use MongoDB Atlas.