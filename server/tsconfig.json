{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "node",
      "express",
      "compression",
      "cors",
      "helmet",
      "jest",
      "redis"
    ],
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core-v2/*"],
      "@models/*": ["src/models/v2/*"],
      "@features/*": ["src/features-v2/*"],
      "@types/*": ["src/types-v2/*"],
      "@api/*": ["src/api/v2/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}