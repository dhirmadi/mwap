{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "node",
      "express",
      "compression",
      "cors",
      "helmet"
    ],
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@models/*": ["src/models/*"],
      "@features/*": ["src/api/v2/*"],
      "@utils/*": ["src/utils/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "src/__tests__/**/*"]
}