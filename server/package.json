{
  "name": "nwap-mini-server",
  "version": "1.0.0",
  "description": "NWAP Mini Project - Backend",
  "main": "src/index.js",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "scripts": {
    "start": "node -r tsconfig-paths/register -r ./tsconfig-paths-bootstrap.js dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:prod": "npm run clean && tsc -p tsconfig.prod.json",
    "deploy": "node scripts/deploy.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "prestart": "npm run build:prod",
    "postinstall": "npm run build:prod"
  },
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.13.17",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.4",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dropbox": "^10.34.0",
    "express": "^4.18.3",
    "express-jwt": "^8.4.1",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-rate-limit": "^7.2.0",
    "googleapis": "^148.0.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.13.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node-dev": "^2.0.0"
  }
}
