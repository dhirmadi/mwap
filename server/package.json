{
  "name": "nwap-mini-server",
  "version": "1.0.0",
  "description": "NWAP Mini Project - Backend",
  "main": "src/index.js",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "scripts": {
    "start": "node -r ts-node/register -r tsconfig-paths/register ./tsconfig-paths-bootstrap.ts dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "node --max-old-space-size=4096 ./node_modules/.bin/tsc -p tsconfig.json",
    "build:prod": "npm run clean && node --max-old-space-size=4096 ./node_modules/.bin/tsc -p tsconfig.prod.json",
    "deploy": "ts-node scripts/heroku/deploy.ts",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "lint:v2": "eslint \"src/**/*-v2/**/*.ts\" --max-warnings 0",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "prestart": "npm run build:prod",
    "postinstall": "npm run build:prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.13.17",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.4",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dropbox": "^10.34.0",
    "express": "^4.18.3",
    "express-jwt": "^8.4.1",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-rate-limit": "^7.2.0",
    "googleapis": "^148.0.0",
    "helmet": "^7.1.0",
    "jwks-rsa": "^3.2.0",
    "mongoose": "^8.13.2",
    "pino": "^9.6.0",
    "rate-limit-redis": "^4.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/redis": "^4.0.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0"
  }
}
