{
  "name": "mwap",
  "description": "Modular Web Application Platform",
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": "false"
    },
    "LOG_LEVEL": {
      "value": "debug"
    },
    "STATUS_CHECK_INTERVAL": {
      "value": "30000"
    },
    "AUTH0_DOMAIN": {
      "required": true
    },
    "AUTH0_CLIENT_ID": {
      "required": true
    },
    "AUTH0_CLIENT_SECRET": {
      "required": true
    },
    "AUTH0_AUDIENCE": {
      "required": true
    },
    "MONGO_URI": {
      "required": true
    },
    "MONGO_ENCRYPTION_KEY_NAME": {
      "value": "review_data_key"
    },
    "VITE_AUTH0_DOMAIN": {
      "required": true
    },
    "VITE_AUTH0_CLIENT_ID": {
      "required": true
    },
    "VITE_AUTH0_AUDIENCE": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-24",
  "environments": {
    "review": {
      "addons": [],
      "scripts": {
        "postdeploy": "npm run setup-review"
      },
      "env": {
        "VITE_API_URL": {
          "description": "API URL for the client application",
          "value": "https://${HEROKU_APP_NAME}.herokuapp.com/api"
        }
      }
    }
  }
}
