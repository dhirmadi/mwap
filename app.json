{
  "name": "mwap",
  "description": "Modular Web Application Platform - Review App",
  "stack": "heroku-24",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "scripts": {
    "postdeploy": "bash ./scripts/setup-review.sh"
  },
  "env": {
    "AUTH0_DOMAIN": {
      "required": true
    },
    "AUTH0_CLIENT_ID": {
      "required": true
    },
    "AUTH0_CLIENT_SECRET": {
      "required": true
    },
    "AUTH0_AUDIENCE": {
      "required": true
    },
    "VITE_AUTH0_DOMAIN": {
      "required": true
    },
    "VITE_AUTH0_CLIENT_ID": {
      "required": true
    },
    "VITE_AUTH0_AUDIENCE": {
      "required": true
    },
    "MONGO_URI": {
      "required": true
    },
    "MONGO_CLIENT_ENCRYPTION_KEY": {
      "required": true
    },
    "NODE_ENV": {
      "value": "production"
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": "false"
    },
    "LOG_LEVEL": {
      "value": "debug"
    },
    "MONGO_ENCRYPTION_KEY_NAME": {
      "value": "review_data_key"
    }
  },
  "environments": {
    "review": {
      "addons": [],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
