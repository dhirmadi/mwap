{
  "name": "mwap",
  "description": "Modular Web Application Platform - Review App",
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": "false"
    },
    "LOG_LEVEL": {
      "value": "debug"
    },
    "STATUS_CHECK_INTERVAL": {
      "value": "30000"
    },
    "WEB_MEMORY": {
      "value": "512"
    },
    "AUTH0_DOMAIN": {
      "required": true,
      "description": "Auth0 domain for backend authentication"
    },
    "AUTH0_CLIENT_ID": {
      "required": true,
      "description": "Auth0 client ID for backend authentication"
    },
    "AUTH0_CLIENT_SECRET": {
      "required": true,
      "description": "Auth0 client secret for backend authentication"
    },
    "AUTH0_AUDIENCE": {
      "required": true,
      "description": "Auth0 API identifier"
    },
    "MONGO_URI": {
      "required": true,
      "description": "MongoDB connection string"
    },
    "MONGO_ENCRYPTION_KEY_NAME": {
      "value": "review_data_key"
    },
    "MONGO_CLIENT_ENCRYPTION_KEY": {
      "required": true,
      "description": "MongoDB client-side encryption key"
    },
    "VITE_AUTH0_DOMAIN": {
      "required": true,
      "description": "Auth0 domain for frontend authentication"
    },
    "VITE_AUTH0_CLIENT_ID": {
      "required": true,
      "description": "Auth0 client ID for frontend authentication"
    },
    "VITE_AUTH0_AUDIENCE": {
      "required": true,
      "description": "Auth0 API identifier for frontend"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "bash ./scripts/setup-review.sh"
  },
  "stack": "heroku-24",
  "environments": {
    "review": {
      "addons": [],
      "scripts": {
        "postdeploy": "bash ./scripts/setup-review.sh"
      },
      "env": {
        "VITE_API_URL": {
          "value": "https://$HEROKU_APP_NAME.herokuapp.com/api"
        },
        "NODE_ENV": {
          "value": "production"
        },
        "NPM_CONFIG_PRODUCTION": {
          "value": "false"
        },
        "LOG_LEVEL": {
          "value": "debug"
        },
        "STATUS_CHECK_INTERVAL": {
          "value": "30000"
        },
        "WEB_MEMORY": {
          "value": "512"
        },
        "MONGO_ENCRYPTION_KEY_NAME": {
          "value": "review_data_key"
        }
      },
      "formation": {
        "web": {
          "quantity": 1,
          "size": "eco"
        }
      },
      "buildpacks": [
        {
          "url": "heroku/nodejs"
        }
      ]
    },
    "test": {
      "scripts": {
        "test": "npm run test:ci"
      },
      "env": {
        "NODE_ENV": "test",
        "NPM_CONFIG_PRODUCTION": "false",
        "CI": "true"
      }
    }
  }
}
