{
  "name": "mwap",
  "description": "Modular Web Application Platform",
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": "false"
    },
    "LOG_LEVEL": {
      "value": "debug"
    },
    "STATUS_CHECK_INTERVAL": {
      "value": "30000"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-24",
  "environments": {
    "review": {
      "addons": [],
      "scripts": {
        "postdeploy": "npm run setup-review"
      }
    }
  }
}
